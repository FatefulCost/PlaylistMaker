<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="CustomToolbarStyleSettings" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearanceSettings</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CustomTitleTextAppearanceSettings" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_pad</item>
        <item name="iconTint">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextInSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:paddingStart">@dimen/text_padding_start</item>
        <item name="android:paddingTop">@dimen/text_padding_top_and_bottom</item>
        <item name="android:paddingBottom">@dimen/text_padding_top_and_bottom</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
</resources>