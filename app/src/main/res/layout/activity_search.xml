<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.activity.SearchActivity"
    android:id="@+id/search_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground_color_settings">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/search"
        app:navigationIcon="@drawable/arrow"
        style="@style/CustomToolbarStyleSettings">

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="32dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:saveEnabled="false"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="text"
            android:maxLines="1"
            android:drawableStart="@drawable/vector_lupa_search"
            android:drawableEnd="@drawable/ic_clear"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="16sp"
            android:textColorHint="@color/search_hint_color"
            android:textColor="@color/search_text_color"
            android:textCursorDrawable="@drawable/cursor_color"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="108dp"
            android:indeterminateTint="@color/search_cursor_color"
            android:visibility="gone" />

        <!-- Результаты поиска -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="13dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:visibility="gone"/>

        <!-- История поиска -->
        <LinearLayout
            android:id="@+id/history_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_gravity="top">

            <!-- Заголовок истории -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_history"
                android:textSize="19sp"
                android:textColor="@color/history_text_color"
                android:gravity="center_horizontal"
                android:fontFamily="@font/ys_display_medium"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"/>

            <!-- Список истории -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingStart="13dp"
                android:paddingEnd="12dp"
                android:clipToPadding="false" />

            <!-- Кнопка очистки истории -->
            <Button
                android:id="@+id/clear_history_button"
                style="@style/ButtonStyleNoNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_history"
                android:textColor="@color/button_history_text_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"/>

        </LinearLayout>

        <!-- Плейсхолдеры -->
        <include
            android:id="@+id/placeholder_layout"
            layout="@layout/placeholder_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>