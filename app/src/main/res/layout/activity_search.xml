<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchActivity"
    android:id="@+id/search_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground_color_settings"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/search"
        app:navigationIcon="@drawable/arrow"
        style="@style/CustomToolbarStyleSettings">

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="32dp">


        <EditText
            android:id="@+id/search_edit_text"
            android:saveEnabled="false"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="text"
            android:maxLines="1"
            android:drawableStart="@drawable/vector_lupa_search"
            android:drawableEnd="@drawable/ic_clear"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="16sp"
            android:textColorHint="@color/search_hint_color"
            android:textColor="@color/search_text_color"
            android:textCursorDrawable="@drawable/cursor_color"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="13dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:visibility="gone"/>

        <include
            android:id="@+id/placeholder_layout"
            layout="@layout/placeholder_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>