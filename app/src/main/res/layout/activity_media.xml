<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_play_list_button_text"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_media"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/media_library"
            app:navigationIcon="@drawable/arrow"
            style="@style/CustomToolbarStyleSettings" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CustomTabLayout"
            android:background="@color/new_play_list_button_text"
            app:tabIndicatorColor="@color/tab_indicator"
            app:tabSelectedTextColor="@color/tab_indicator"
            app:tabTextColor="@color/not_selected_tab"
            app:tabMode="fixed"
            app:tabGravity="fill"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_play_list_button_text"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>